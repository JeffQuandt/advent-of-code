package adventInAugust;

public class Day1 {
	
	public static void main(String[] args){
		String input = args[0];
		char[] directions = input.toCharArray();
		int floor = 0;
		for(char direction : directions){
			if(direction == '('){
				floor++;
			} else {
				floor--;
			}
		}
		System.out.println(floor);
	}

}
